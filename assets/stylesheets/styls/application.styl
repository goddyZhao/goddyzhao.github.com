@import "reset"
@import "variables"
@import "utils"

#hack
.popover
  .popover-title a
    text-decoration none
    color #333
  ul li
    background transparent url($leafImgUrl) no-repeat 0 0
    padding 0 5px 0 20px
    margin-bottom 5px
    max-width 430px

.hide
  display none

html, body
  background transparent url($bgImgUrl) repeat 0 0
  
body #page
  width 990px
  margin 0 auto
  color $textColor
  
#hd
  margin 20px 0
  position relative
  
  ul
    text-align right
  
    li
      display inline
      color $delightTextColor
      cursor pointer
    li.active
      color $highlightTextColor  
      
      
#bd
  background transparent url($treeImgUrl) no-repeat 0 0
  margin-top 180px
  width 990px 
  height 1421px
  z-index 100
  position relative
  
  .brief-info
    position absolute
    top -78px
    left 140px
    
    h1
      font-size 48px
      margin-bottom 20px
      margin-left 25px
      
      b
        border-bottom 1px dashed #999
              
      .last-name
        color $highlightTextColor

    .net-info
      p
        padding 5px 0 0 40px
        
      .blog
        background transparent url($blogImgUrl) no-repeat 0 0
        height 32px
        font-size 24px
        
      .blog-remark
        color $delightTextColor
      
      .email
        background transparent url($emailImgUrl)  no-repeat 0 0
        height 32px
        font-size 24px
      
      .weibo
        background-image url($weiboImgUrl)
        width 32px
        height 32px
        display inline-block
      .twitter
        background-image url($twitterImgUrl)
        width 32px
        height 32px
        display inline-block
        
      
  
